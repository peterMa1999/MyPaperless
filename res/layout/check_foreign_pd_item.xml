<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/RNO"
            android:textColor="#000000"
            android:textSize="@dimen/electric_text" />

        <TextView
            android:id="@+id/tv_RNO"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="3.5"
            android:background="@drawable/shape_electric_textview"
            android:gravity="center"
            android:textColor="#EF1268"
            android:textSize="@dimen/electric_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Shift:"
            android:textColor="#000000"
            android:textSize="@dimen/electric_text" />

        <TextView
            android:id="@+id/tv_shift"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/shape_electric_textview"
            android:gravity="center"
            android:textColor="#EF1268"
            android:textSize="@dimen/electric_text" />

        <View
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5" />

        <View
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:background="@null"
            android:src="@drawable/camera" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_electric_textview" >

            <AutoCompleteTextView
                android:id="@+id/auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:completionHint="@string/completionHint"
                android:completionThreshold="3"
                android:gravity="center" />

            <Button
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_electric_ok_btn"
                android:text="OK"
                android:textColor="#ff0000"
                android:textSize="@dimen/electric_text" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>