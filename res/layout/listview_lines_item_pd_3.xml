<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        >
        <TextView
            android:id="@+id/textViewline"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16_20"
            android:textColor="#000000"
            android:text="TextView" />
        <TextView
            android:id="@+id/textViewperson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14_18"
            android:textColor="#000000"
            android:text="" />

        <ImageButton
            android:id="@+id/check_bt_img"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/check_click" />
         <CheckBox
            android:id="@+id/flagCheckBox"
            android:layout_width="0dp"
            android:clickable="false" 
			android:focusable="false" 
			android:focusableInTouchMode="false"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:button="@drawable/bt_checkbox_login2" />
        
    </LinearLayout>
</LinearLayout>