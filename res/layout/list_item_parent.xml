<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
 android:layout_height="@dimen/person_information_width"
 android:background="#3BB715"
 android:orientation="horizontal"> 
 <ImageView
  android:id="@+id/image_parent"
  android:layout_width="36dp"
  android:layout_height="36dp"
  android:layout_centerVertical="true"
  android:src="@drawable/icon_back_p"/> 
 <ImageView
  android:id="@+id/image_delete"
  android:layout_width="@dimen/person_information_width"
  android:layout_height="@dimen/person_information_width"
  android:layout_centerVertical="true"
  android:layout_alignParentRight="true"
  android:src="@drawable/icon_close_normal"/> 
 <ImageView
  android:id="@+id/image_add"
  android:layout_width="@dimen/person_information_width"
  android:layout_height="@dimen/person_information_width"
  android:layout_centerVertical="true"
  android:layout_toLeftOf="@id/image_delete"
  android:src="@drawable/map_ic_zoom_in"/>

 <TextView
     android:id="@+id/text_parent"
     android:layout_width="wrap_content"
     android:layout_height="@dimen/image_width"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/image_parent"
     android:gravity="center"
     android:text="parent1"
     android:textColor="#FFF"
     android:textSize="@dimen/sp_16_20" />
 
</RelativeLayout>