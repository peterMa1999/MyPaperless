<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99ffffff"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="vertical" >
    <ImageView
        android:id="@+id/qr_bt"
        android:layout_width="@dimen/image_width_28"
        android:layout_height="@dimen/image_width_28"
        android:src="@drawable/qr_bt_onclick_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/childTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:layout_margin="2dp"
            android:maxLines="2"
            android:textSize="@dimen/sp_14_18"
            android:text="MSD元件管控MSD Label填寫完整及確認干燥劑是否有放,指示卡有無變色" />

        <EditText
            android:id="@+id/childContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            android:maxLines="15"
            android:background="@drawable/edit_shape"
            android:textSize="@dimen/sp_14_18"
            android:ems="10" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:orientation="vertical" >
	<LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/childIcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:maxLength="20"
            android:background="@drawable/shape_electric_textview"
            android:textSize="@dimen/sp_14_18"
            android:padding="3dp"
            android:text="TextView" />

        <RadioGroup
            android:id="@+id/childRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/sp_14_18"
                android:text="OK" />

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14_18"
                android:text="NG" />
        </RadioGroup>
		</LinearLayout>
    </LinearLayout>

</LinearLayout>