<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_checkPD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_bg"
    android:orientation="vertical" 
    >
    
    <include  layout="@layout/activity_head_top"></include>"
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/leave_info_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/leave_info_select_shape"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_width"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:focusable="true"  
   					android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/scanQR"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/scan_click_qr"/>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="W/O:"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_14_18"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/edit_wo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/person_information_width"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_16"
                        android:hint="掃一掃SN"
                        android:textStyle="bold" >
                    </EditText>

                    <ImageButton
                        android:id="@+id/up"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_weight="0.18"
                        android:background="@null"
                        android:src="@drawable/ic_up2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_height_35_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RNO: "
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/RNO_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:text="" 
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="線別: "
                                android:textSize="@dimen/sp_14_18"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lines_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:text="" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_height_35_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MODEL: "
                                android:textSize="@dimen/sp_14_18"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/MODEL_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:text="REV: "
                                android:textSize="@dimen/sp_14_18"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/REV_textView"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14_18"
                                android:text="" />
                        </LinearLayout>
                    </LinearLayout>

                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_height_35_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="批量: "
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/mutil_textView"
                                android:textColor="#000000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14_18"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_bt_sample"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="面別: "
                                android:textSize="@dimen/sp_14_18"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/sample_editText"
                                android:layout_width="match_parent"
                                android:textColor="#000000"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:layout_marginRight="3dp"
                                android:singleLine="true"
                                android:gravity="center"
                                android:text="1px"
                                android:textSize="@dimen/sp_14_18"
                                android:background="@drawable/bg_edittext" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                    
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_height_35_45"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14_18"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="備註: " />

                        <Spinner
                            android:id="@+id/beizhuSpiner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/nt_wangdianditu_cbx_bg"
                            android:entries="@array/yuan" />

                        <Spinner
                            android:id="@+id/questionSpiner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:background="@drawable/nt_wangdianditu_cbx_bg_unclic"
                            android:entries="@array/ting" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14_18"
                            android:textStyle="bold"
                            android:text="Deviation:" />

                        <EditText
                            android:id="@+id/Devation_editText"
                            android:layout_width="0dp"
                            android:textColor="#000000"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"
                            android:paddingLeft="5dp"
                            android:layout_weight="1.5"
                            android:singleLine="true"
                            android:gravity="center"
                            android:textSize="@dimen/sp_14_18"
                            android:background="@drawable/bg_edittext" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_bar_height_35_45"
                        android:orientation="horizontal" >

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <RadioButton
                                android:id="@+id/radio0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:text="每日或更換MODEL" />

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="0dp"
                                android:textColor="#000000"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:textSize="@dimen/sp_14_18"
                                android:text="Deviation" />

                            <RadioButton
                                android:id="@+id/radio2"
                                 android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:text="ECN" />
                            <RadioButton
                                android:id="@+id/radio3"
                                 android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14_18"
                                android:text="新機種" />
                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/leave_info_select_shape"
                android:orientation="vertical" >-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/leave_info_select_shape"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="點檢項目"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/up2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_weight="0.2"
                        android:background="@null"
                        android:src="@drawable/ic_down2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exmalple_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:visibility="visible" >
 					<ExpandableListView
					        android:id="@+id/laptop_list"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:groupIndicator="@null"
					        android:focusable="false"
					         />
                </LinearLayout>
            </LinearLayout>
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>