<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="#3BB715"
        android:gravity="center_vertical" >

        <include layout="@layout/top_bar_person" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_bar_height_35_45"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="樓層"
            android:textSize="@dimen/sp_14_18" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_bar_height_35_45"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="線體(設備)"
            android:textSize="@dimen/sp_14_18" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_bar_height_35_45"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="SBU"
            android:textSize="@dimen/sp_14_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview_floor_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:background="@color/white" >

        <Button
            android:id="@+id/bt_create_qr"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#3BB715"
            android:gravity="center"
            android:padding="10dp"
            android:text="前往創建二維碼>>>"
            android:textSize="@dimen/sp_16_20" />
    </LinearLayout>

</LinearLayout>