<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99ffffff"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="vertical" >
    <ImageView
        android:id="@+id/qr_bt"
        android:layout_width="@dimen/image_width_28"
        android:layout_height="@dimen/image_width_28"
        android:src="@drawable/qr_bt_onclick_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/childTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14_18"
            android:text="MSD元件管控MSD Label填寫完整及確認干燥劑是否有放,指示卡有無變色" 
			/>

        <EditText
            android:id="@+id/childContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:paddingLeft="3dp"
            android:maxLines="15"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/sp_14_18"
            android:background="@drawable/bg_edittext"
            >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical" >
	<LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/childIcar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittext"
            android:textSize="14sp"
            android:text="此處不需填寫" />
        </LinearLayout>
		<LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical" >
        <RadioGroup
            android:id="@+id/childRadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/rb_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:checked="true"
                android:textSize="13sp"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:text="否" />

        </RadioGroup>
		</LinearLayout>
    </LinearLayout>

</LinearLayout>