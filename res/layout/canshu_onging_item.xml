<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/onging_nb_tv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1"
                android:textColor="#3980F4"
                android:textSize="@dimen/sp_14_1" />

            <TextView
                android:id="@+id/onging_jizhong_numbertv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.7"
                android:gravity="center_vertical"
                android:text="幾種號 "
                android:textColor="@color/back"
                android:textSize="@dimen/sp_14_1" />
			<TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="審核人:"
                android:textColor="@color/back"
                android:textSize="@dimen/sp_14_1" />
            <TextView
                android:id="@+id/onging_check_by"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="審核人"
                android:textColor="@color/back"
                android:textSize="@dimen/sp_14_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:text="" />

                <TextView
                    android:id="@+id/dianjian_nb_text"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="創建時間:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/sp_14_1" />

                <TextView
                    android:id="@+id/onging_datatime_tv"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:text="2015-12-28"
                    android:singleLine="true"
                    android:textColor="@color/back"
                    android:textSize="@dimen/sp_14_1" />
                <TextView
                    android:id="@+id/onging_updatetype_tv"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="操作類型"
                    android:textColor="@color/back"
                    android:textSize="@dimen/sp_14_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="horizontal" >
				
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="By:"
                    android:textColor="@color/back"
                    android:textSize="@dimen/sp_14_1" />
                <TextView
                    android:id="@+id/onging_create_by"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="創建人"
                    android:textColor="@color/back"
                    android:textSize="@dimen/sp_14_1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.35" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.65"
                android:background="@color/green" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
