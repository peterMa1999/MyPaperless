<LinearLayout 
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/top_bar_height_35"  
       android:gravity="center_vertical"
       android:orientation="horizontal">

       <TextView
           android:id="@+id/textsection"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="@dimen/sp_16_25"
           android:gravity="center_vertical"
           android:layout_marginLeft="10dp"
           android:textColor="#524265"
           android:layout_weight="1" 
           android:textStyle="bold"
           android:text="工站：" />

       <Spinner
           android:id="@+id/spinnerfloor"
           android:layout_width="0dp"
           android:layout_marginRight="5dp"
		   android:layout_height="match_parent"
           android:layout_weight="0.35"
           android:background="@drawable/nt_wangdianditu_cbx_bg" />

   </LinearLayout>
   <LinearLayout 
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <ListView
        android:id="@+id/listViewLines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/card_xuxian"
        android:dividerHeight="2dp"
        android:paddingLeft="5dp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
