<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006903"
    android:orientation="vertical"
    tools:context=".CheckElectricScrewdriverActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:background="#3BB715"
        android:gravity="center_vertical" >

        <include
            android:layout_weight="1"
            layout="@layout/top_bar_item_pd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="5"
        android:background="@drawable/leave_info_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/leave_info_select_shape"
            android:orientation="vertical" >

            <include layout="@layout/check_foreign_pd_item" />

            <View style="@style/electric_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customer:"
                    android:textColor="#000000"
                    android:textSize="@dimen/electric_text" />

                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_electric_textview"
                    android:gravity="center"
                    android:textColor="#EF1268"
                    android:textSize="@dimen/electric_text" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <View style="@style/electric_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Model #:"
                    android:textColor="#000000"
                    android:textSize="@dimen/electric_text" />

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_electric_textview"
                    android:gravity="center"
                    android:textColor="#EF1268"
                    android:textSize="@dimen/electric_text" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <View style="@style/electric_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="Measure:"
                        android:textColor="#000000"
                        android:textSize="@dimen/electric_text" />

                    <EditText
                        android:id="@+id/torque1"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_electric_textview"
                        android:gravity="center"
                        android:hint="1st"
                        android:textColor="#EF1268"
                        android:textSize="@dimen/electric_text" />

                    <EditText
                        android:id="@+id/torque2"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_electric_textview"
                        android:gravity="center"
                        android:hint="2nd"
                        android:textColor="#EF1268"
                        android:textSize="@dimen/electric_text" />

                    <EditText
                        android:id="@+id/torque3"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_electric_textview"
                        android:gravity="center"
                        android:hint="3rd"
                        android:textColor="#EF1268"
                        android:textSize="@dimen/electric_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/torque_calculation"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_electric_calculation_btn"
                        android:gravity="center"
                        android:text="GO"
                        android:textColor="#000000"
                        android:textSize="@dimen/electric_text" />

                    <TextView
                        android:id="@+id/torque_sum"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/shape_electric_textview"
                        android:gravity="center"
                        android:hint="average"
                        android:textColor="#EF1268"
                        android:textSize="@dimen/electric_text" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/electric_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Checker"
                    android:textColor="#000000"
                    android:textSize="@dimen/electric_text" />

                <EditText
                    android:id="@+id/et_check_person"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_electric_textview"
                    android:gravity="center"
                    android:textColor="#EF1268"
                    android:textSize="@dimen/electric_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>