<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="#3BB715"
        android:gravity="center_vertical" >

        <include layout="@layout/top_bar_person" />
    </LinearLayout>
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/numberOrder"
                android:textColor="@color/back"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75"
                android:gravity="center"
                android:text="@string/examine_report_NO"
                android:textColor="@color/back"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.25"
                android:gravity="center"
                android:text="點檢人"
                android:textColor="@color/back"
                android:textSize="16sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview_piliang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:listSelector="@android:color/transparent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_create_qr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="fill_parent" >
            <Button
            android:id="@+id/check_pass_bt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#3BB715"
            android:gravity="center"
            android:padding="5dp"
            android:text="審核通過"
            android:layout_margin="2dp"
            android:textSize="@dimen/sp_16_20" />
        </LinearLayout>
		
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/top_bar_height"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center" >
        <CheckBox
            android:id="@+id/pl_quanxuan_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="全選" />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
