<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1" 
    android:background="@color/icar_cropimage_background"
    >
    <view class="com.zsm.foxconn.mypaperless.help.CropImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gl_modify_avatar_image"
        android:layout_gravity="center"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gl_modify_avatar_bottom"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:padding="2dp"
        >
    	<Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/gl_modify_avatar_rotate_left"
            android:background="@drawable/bg_edittext_screenshot"
            android:text="向左旋轉"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/gl_modify_avatar_cancel"
            android:background="@drawable/bg_edittext_screenshot"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/gl_modify_avatar_save"
            android:background="@drawable/bg_edittext_screenshot"
            android:text="保存"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
       <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/gl_modify_avatar_rotate_right"
            android:background="@drawable/bg_edittext_screenshot"
            android:text="向右旋轉"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
</LinearLayout>