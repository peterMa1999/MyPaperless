<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5F3F5"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/onclick_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/qr_tv_floor"
                android:layout_width="0dp"
                android:layout_height="@dimen/top_bar_height_35_45"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="樓層"
                android:textSize="@dimen/sp_14_18" />

            <TextView
                android:id="@+id/qr_tv_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/top_bar_height_35_45"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="線別(點檢物)"
                android:textSize="@dimen/sp_14_18" />

            <TextView
                android:id="@+id/qr_tv_sbu"
                android:layout_width="0dp"
                android:layout_height="@dimen/top_bar_height_35_45"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="SBU"
                android:textSize="@dimen/sp_14_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_floorqr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/checkbox_floor_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>